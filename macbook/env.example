# MacBook Party Interface Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# HOUSE CONFIGURATION
# =============================================================================
HOUSE_ID=houseA

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# WHISPER TRANSCRIPTION SERVICE
# =============================================================================
# Tailscale IP of your unRAID server running faster-whisper
WHISPER_URL=http://100.x.x.x:10300

# Whisper model configuration
WHISPER_MODEL=tiny-int8
WHISPER_LANGUAGE=en

# =============================================================================
# AUDIO CAPTURE CONFIGURATION
# =============================================================================
# Audio device index (0 = default, use `python -c "import pyaudio; p=pyaudio.PyAudio(); [print(f'{i}: {p.get_device_info_by_index(i)[\"name\"]}') for i in range(p.get_device_count())]"` to list)
AUDIO_DEVICE_INDEX=0

# Audio capture settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_DURATION_MS=3000
AUDIO_SILENCE_THRESHOLD=500

# =============================================================================
# LLM AGENT CONFIGURATION
# =============================================================================
# Choose your LLM provider: openai, anthropic
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Configuration (alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Model selection
LLM_MODEL=gpt-3.5-turbo

# Observation timing (minutes)
OBSERVATION_INTERVAL_MIN=2
OBSERVATION_INTERVAL_MAX=5

# =============================================================================
# MACBOOK SPECIFIC SETTINGS
# =============================================================================
# Enable closed-lid operation (experimental)
MACBOOK_CLOSED_LID=false

# External display configuration
EXTERNAL_DISPLAY_RESOLUTION=1024x600
EXTERNAL_DISPLAY_PRIMARY=true

# Power management
DISABLE_SLEEP=true
DISABLE_SCREENSAVER=true

# =============================================================================
# PARTY MODE SETTINGS
# =============================================================================
# Enable party mode optimizations
PARTY_MODE=true

# Disable notifications during party
DISABLE_NOTIFICATIONS=true

# High performance mode
HIGH_PERFORMANCE_MODE=true

# Network priority (for Tailscale)
NETWORK_PRIORITY=high

# =============================================================================
# EMERGENCY SETTINGS
# =============================================================================
# Enable emergency recovery procedures
EMERGENCY_RECOVERY=true

# Fallback mode when services fail
FALLBACK_MODE=debug

# Backup plan activation
BACKUP_PLAN_ENABLED=true
